<section id="viewComments">
    <div class="post">
        <div class="col thumbnail">
            <a href="{{url}}">
                <img src="{{imageUrl}}">
            </a>
        </div>
        <div class="post-content">
            <div class="title">
                <a href="{{url}}">
                    {{title}}
                </a>
            </div>
            <div class="details">
                <p>{{description}}</p>
                <div class="info">
                    submitted {{dayBefore}} ago by {{author}}
                </div>
                <div class="controls">
                    <ul>
                        {{# if isAuthor}}
                            <li class="action"><a class="editLink" href="#/edit/:{{id}}">edit</a></li>
                            <li class="action"><a class="deleteLink" href="#/delete/:{{id}}">delete</a></li>
                        {{/if}}
                    </ul>
                </div>

            </div>
        </div>

        <div class="post post-content">
            <form id="commentForm" action="#/addComment:{{id}}" method="post">
                <label>Comment</label>
                <textarea name="content" type="text"></textarea>
                <input type="submit" value="Add Comment" id="btnPostComment">
            </form>
        </div>
        <div class="clear"></div>
    </div>
</section>